<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <Button
            android:id="@+id/btMoreDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Details"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/precipLabeltv"
            android:layout_alignEnd="@+id/precipLabeltv"
            android:layout_alignLeft="@+id/precipLabeltv"
            android:layout_alignStart="@+id/precipLabeltv" />

        <Button
            android:id="@+id/btViewMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Map"
            android:layout_toRightOf="@id/btMoreDetails"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            />

        <ImageView
            android:id="@+id/fbIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fb_icon"
            android:layout_toRightOf="@id/btViewMap"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/btViewMap"
            android:layout_alignTop="@+id/btViewMap"/>
        <ImageView
            android:id="@+id/ivWeatherImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/btViewMap"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvWeatherDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivWeatherImage"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tempDetailstxtView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/tvWeatherDetails"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/minMaxTempDetailstxtView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/tempDetailstxtView"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/precipLabeltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precipitation"
            android:textSize="20sp"
            android:layout_below="@id/minMaxTempDetailstxtView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvPrecipValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/minMaxTempDetailstxtView"

            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/tvChanceOfRainLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chance of Rain"
            android:textSize="20sp"
            android:layout_below="@id/precipLabeltv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvChanceOfRainValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/tvPrecipValue"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvWindSpeedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind Speed"
            android:textSize="20sp"
            android:layout_below="@id/tvChanceOfRainLabel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvWindSpeedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/tvChanceOfRainValue"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvDewPointLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dew Point"
            android:textSize="20sp"
            android:layout_below="@id/tvWindSpeedLabel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvDewPointValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/tvWindSpeedValue"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvHumidityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textSize="20sp"
            android:layout_below="@id/tvDewPointLabel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvHumidityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/tvDewPointValue"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvVisibilityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visibiliity"
            android:textSize="20sp"
            android:layout_below="@id/tvHumidityLabel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvVisibilityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/tvHumidityValue"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvSunriseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunrise"
            android:textSize="20sp"
            android:layout_below="@id/tvVisibilityLabel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvSunriseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/tvVisibilityValue"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvSunsetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunrise"
            android:textSize="20sp"
            android:layout_below="@id/tvSunriseLabel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tvSunsetValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/tvSunriseLabel"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
</ScrollView>